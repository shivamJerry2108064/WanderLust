<% layout('/layouts/boilerplate.ejs') -%>
<body>
    <div class="row mt-3 ">
        <div class="col-6 offset-3">
            <h3><b>signUp to wanderlust!</b></h3>
            <form action="/signup" method="post" novalidate class="needs-validation signUp">
                <div class="mb-3">
                    <label for="username"  class="form-label">USERNAME:</label>
                    <input name="username" id="username"   class="form-control" type="text" required />
                    <div class="valid-feedback">username looks good.</div>
                  </div>
                  <br/><br/>
                <div class="mb-3">
                  <label for="email"  class="form-label">EMAIL-ID:</label>
                  <input name="email" id="email" type="email"  class="form-control" type="text" required />
                </div>
                <br/><br/>
                <div class="mb-3">
                    <label for="password"  class="form-label">PASSWORD:</label>
                    <input name="password" id="password"   class="form-control" type="password" required />
                    <div class="valid-feedback">password looks better</div>
                </div>
                <br/><br/>

                <div class="mb-3">
                    <button type="submit" class="btn btn-success">signUp</button>
                </div>
            </form>
        </div>
        <div class="col-6 offset-3 mb-3 mt-1">
            <a href="/login"  class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover anchor" >Login to Your account!</a>
        </div>
    </div>
</body>