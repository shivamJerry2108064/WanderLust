<% layout('/layouts/boilerplate.ejs') -%>
<body>
    <div class="row mt-3 ">
        <div class="col-6 offset-3">
            <h3><b>login to wanderlust!</b></h3>
            <form action="/login" method="post" novalidate class="needs-validation login">
                <div class="mb-3">
                    <label for="username"  class="form-label">USERNAME:</label>
                    <input name="username" id="username"   class="form-control" type="text" required />
                    
                </div>
                <br/><br/>
                
                <div class="mb-3">
                    <label for="password"  class="form-label">PASSWORD:</label>
                    <input name="password" id="password"   class="form-control" type="password" required />
                    
                </div>
                <br/><br/>

                <div class="mb-3">
                    <button type="submit" class="btn btn-success">Log-in</button>
                </div>
            </form>
        </div>
        
        <div class="col-6 offset-3 mb-2 mt-1" ><a href="/signup" class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover anchor">no account? ,then signup first!</a></div>
    </div>
    
</body>